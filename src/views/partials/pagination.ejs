<ul class="pagination">
  <% if(page > 1){ %>
    <li class="page-item"><a href="#" class="page-link"><i class="las la-angle-left"></i></a></li>
  <% } %>
  <% for (let i = 1; i <= totalPages; i++) { %>
    <li class="page-item <%= i === page && "active" %> active"><a href="/<%= path %>?page=<%= i %>" class="page-link"><%= String(i).padStart(2, '0') %></a></li>
  <% } %>
  <% if (page < totalPages) { %>
    <li class="page-item"><a href="/<%= path %>?page=<%= page + 1 %>" class="page-link"><i class="las la-angle-right"></i></a></li>
  <% } %>
