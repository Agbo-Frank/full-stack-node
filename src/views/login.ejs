<%- include('partials/head') %>
<%- include('partials/header') %>
<%- include('partials/banner', {name: "Login"}) %>
<!-- Account Section Starts Here -->
<div class="account-section padding-top padding-bottom">
  <div class="container">
    <div class="row justify-content-between align-items-center">
        <div class="col-lg-6 col-xl-5 d-none d-lg-block">
            <div class="section__thumb rtl me-5">
                <img src="assets/images/account/thumb.png" alt="account">
            </div>
        </div>
        <div class="col-lg-6 col-xl-5">
            <div class="account__form__wrapper">
                <h3 class="title">Hello, Welcome Back</h3>
                <form id="login" class="form account__form">
                    <p class="error theme-one"></p>
                    <div class="form-group">
                        <input required type="email" name="email" class="form-control form--control" placeholder="Enter your Email address">
                    </div>
                    <div class="form-group">
                        <input required type="password" name="password" class="form-control form--control" placeholder="Password">
                        <span class="eye-icon"><i class="las la-eye"></i></span>
                    </div>
                    <div class=" d-flex justify-content-between flex-wrap align-items-center">
                        <div class="form--check me-4">
                            <input type="checkbox" id="rem-me">
                            <label for="rem-me">Remember Me</label>
                        </div>
                        <a href="/forget-password" class="forgot-pass text--base">Forgot Password</a>
                    </div>
                    <button type="submit" class="btn cmn--btn mt-4">
                        Sign In Account
                        <span id="loader" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </form>
                <p class="mt-4">Don't have on Account yet?   <a class="ms-2 text--base" href="/register">Create Account</a></p>
            </div>
        </div>
    </div>
  </div>
</div>
<!-- Account Section Ends Here -->

<%- include('partials/footer') %>
<%- include('partials/scripts') %>