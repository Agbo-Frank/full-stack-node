<%- include('partials/head') %>
<%- include('partials/header') %>
<%- include('partials/banner', {name: "Transactions"}) %>

<!-- Dashboard Section Starts Here -->
<div class="dashbaord-section padding-bottom">
  <div class="container">
    <div class="row">
      <%- include('partials/sidebar', {active: "admin/transactions"}) %>
      <div class="col-lg-8 col-xl-8 col-xxl-9">
        <div class="dashboard__wrapper">
            <div class="dashboard__header">
                <div class="inner">
                  <h3 class="title">Transactions</h3>
                </div>
                <div class="inner">
                  <ul class="tabs d-flex justify-content-end flex-wrap align-items-end">
                    <li>
                      <div class="user-thumb">
                        <img src="assets/images/dashboard/cc1.png" alt="dashboard">
                      </div>
                    </li>
                  </ul>
                </div>
            </div>
            <div class="dashboard__table__container">
              <table style="width: 100%;" class="table mt-5 table-responsive transection__table dashboard__table">
                <thead>
                    <tr>
                      <th>Ref</th>
                      <th>Type</th>
                      <th>Currency</th>
                      <th>Amount</th>
                      <th>Status</th>
                      <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                  <% data.docs.forEach(i => { %>
                    <tr data-user="<%= Object.entries(i).map(i => `${i[0]}:${i[1]}`).join(',') %>" class="search--btn user__details__btn">
                      <td data-label="User Name">
                        <p class="name"><%= i?._id %></p>
                      </td>
                      <td data-label="Amount"><span class="amount"><%= i?.type %></span></td>
                      <td data-label="Wallet"><span class="wallet"><%= i?.currency %></span></td>
                      <td data-label="Date"><span class="date"><%= i?.amount %></span></td>
                      <td data-label="Currency"><span class="currency"><%= i?.status %></span></td>
                      <td data-label="Date"><span class="date"><%= i?.created_at %></span></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Dashboard Section Ends Here -->

<%- include('partials/footer') %>
<%- include('partials/scripts') %>