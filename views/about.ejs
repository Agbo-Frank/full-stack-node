            <% 
                const certs = [
                    "/assets/images/certificates/certificate1.pdf",
                    "/assets/images/certificates/certificate2.pdf",
                    "/assets/images/certificates/certificate3.pdf"
                ] 
            %>
            <% certs.forEach(cert => { %>
                <div class="single-slide">
                    <div class="plan__item">
                        <iframe src="<%= cert %>" width="100%"></iframe>
                        <div class="plan__item-footer">
                            <a download href="<%= cert %>" style="color: #D7A31F;" class="footer-info">DOWNLOAD</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>
